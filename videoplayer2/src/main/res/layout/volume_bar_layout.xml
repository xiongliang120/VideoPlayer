<?xml version="1.0" encoding="utf-8"?>
<com.example.user.videoplayer.view.VolumeBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_gravity="center"
        android:background="@mipmap/volume_gray_bg"
        android:layout_width="@dimen/volume_layout_width"
        android:layout_height="@dimen/volume_layout_height"
        android:layout_marginLeft="@dimen/volume_progress_view_marginLeft"
        android:layout_marginTop="@dimen/volume_progress_view_marginTop"
        />
    <ImageView
        android:id="@+id/volum_bg"
        android:layout_width="78px"
        android:layout_height="62px"
        android:layout_gravity="center"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        />
    <com.example.user.videoplayer.view.VolumeProgressView
        android:layout_gravity="center"
        android:id="@+id/my_progress"
        android:layout_width="@dimen/volume_layout_width"
        android:layout_height="@dimen/volume_layout_height"
        android:layout_marginLeft="@dimen/volume_progress_view_marginLeft"
        android:layout_marginTop="@dimen/volume_progress_view_marginTop"
        custom:roundColor="#dddddd"
        custom:textColor="@android:color/white"
        custom:roundWidth="@dimen/volume_round_width"
        custom:textSize="20sp"
        custom:style="STROKE"/>
</com.example.user.videoplayer.view.VolumeBar>
